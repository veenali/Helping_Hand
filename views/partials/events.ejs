<%- include('./header') %>
    <link rel="stylesheet" href="/css/events.css">
    <link rel="stylesheet" href="/css/modal.css">

    <body>
        <div class="wrapper">
            <%- include('./topnav') %>

                <div class="main_body">
                    <%- include('./sidenav.ejs', {home:0, about:0, donation:0, events:1, status:0}) %>

                        <div class="container-home">
                            <div class="info">
                                <div class="donation-page">
                                    <% for( let index = 0; index < eventList.length; index++ ) {  %>
                                        <div class="donation-card">
                                            <div class="card-content">
                                                <h2 class="card-title">
                                                    <%= eventList[index].EventName %>
                                                </h2>
                                                <p class="card-body">
                                                    <%= eventList[index].description %>
                                                </p>
                                                <div class="stats">
                                                    <div class="goal">
                                                        <span>Goal</span>
                                                        <span class="dollars">₹<%= eventList[index].goalAmount %> </span>
                                                    </div>
                                                    <div class="raised">
                                                        <span>Raised</span>
                                                        <span class="dollars">₹<%= eventList[index].raisedAmount %> </span>
                                                    </div>
                                                    <div class="toGo">
                                                        <span>To Go</span>
                                                        <span class="dollars">₹<%= eventList[index].goalAmount - eventList[index].raisedAmount %> </span>
                                                    </div>
                                                </div>
                                                <% if ( eventList[index].raisedAmount <=  eventList[index].goalAmount ) { %>
                                                    <a href="/event/contribute/<%= eventList[index]._id %> " target="_blank" class="card-button" id="contribute<%= eventList[index]._id %>">Contribute</a>
                                                    <% }else{ %>
                                                        <a aria-disabled="true" href="/event/contribute/<%= eventList[index]._id %> " target="_blank" class="card-button" id="contribute<%= eventList[index]._id %>">Contribute</a>
                                                        <% } %>

                                            </div>
                                        </div>
                                        <!-- <div id="contribute<%= eventList[index]._id %>" class="modal">
                                            <div class="modal__content">
                                                <h1>CSS Only Modal</h1>

                                                <p>
                                                    You can use the :target pseudo-class to create a modals with Zero JavaScript. Enjoy!
                                                </p>

                                                <div class="modal__footer">
                                                    Made with <i class="fa fa-heart"></i>, by <a href="https://twitter.com/denicmarko" target="_blank">@denicmarko</a>
                                                </div>

                                                <a href="#" class="modal__close">&times;</a>
                                            </div>
                                        </div> -->
                                        <% } %>
                                </div>
                            </div>
                        </div>
                </div>



                <!-- CHAT BAR BLOCK -->
                <%- include('./chatbot') %>


                    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
                    <script src="/js/responses.js"></script>
                    <script src="/js/chat.js"></script>
                    <script></script>
    </body>

    </html>